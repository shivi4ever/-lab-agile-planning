# Pinterest Automation Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# Pinterest API Configuration
PINTEREST_APP_ID=demo_pinterest_app_id
PINTEREST_APP_SECRET=demo_pinterest_app_secret
PINTEREST_ACCESS_TOKEN=demo_pinterest_access_token
PINTEREST_REFRESH_TOKEN=demo_pinterest_refresh_token

# AI Image Generation (choose one or both)
OPENAI_API_KEY=demo_openai_api_key
STABILITY_AI_KEY=demo_stability_ai_key
AI_PROVIDER=openai  # Options: 'openai' or 'stability'

# Website Configuration
WEBSITE_URL=https://demo-website.com
WEBSITE_NAME=Demo Website

# Posting Configuration
POSTS_PER_DAY=3
SKIP_WEEKENDS=false
GENERATE_BATCH_CONTENT=true
BATCH_CONTENT_SIZE=7
RUN_INITIAL_POST=false

# Rate Limiting
MAX_PINS_PER_DAY=25
API_RATE_LIMIT=200

# File Paths
CONTENT_STORAGE_PATH=./content
LOG_FILE_PATH=./logs/pinterest_bot.log

# Database
DATABASE_URL=sqlite:///pinterest_bot.db

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=demo_ga_property_id

# Development Settings
DEBUG=true
LOG_LEVEL=INFO