# Pinterest Automation Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# Pinterest API Configuration
PINTEREST_APP_ID=your_pinterest_app_id_here
PINTEREST_APP_SECRET=your_pinterest_app_secret_here
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token_here
PINTEREST_REFRESH_TOKEN=your_pinterest_refresh_token_here

# AI Image Generation (choose one or both)
OPENAI_API_KEY=your_openai_api_key_here
STABILITY_AI_KEY=your_stability_ai_key_here
AI_PROVIDER=openai  # Options: 'openai' or 'stability'

# Website Configuration
WEBSITE_URL=https://yourwebsite.com
WEBSITE_NAME=Your Website Name

# Posting Configuration
POSTS_PER_DAY=3
SKIP_WEEKENDS=false
GENERATE_BATCH_CONTENT=true
BATCH_CONTENT_SIZE=7
RUN_INITIAL_POST=false

# Rate Limiting
MAX_PINS_PER_DAY=25
API_RATE_LIMIT=200

# File Paths
CONTENT_STORAGE_PATH=./content
LOG_FILE_PATH=./logs/pinterest_bot.log

# Database
DATABASE_URL=sqlite:///pinterest_bot.db

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_property_id_here

# Development Settings
DEBUG=false
LOG_LEVEL=INFO